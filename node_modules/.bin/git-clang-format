#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/python" ]; then
  "$basedir/python"  "$basedir/../clang-format/bin/git-clang-format" "$@"
  ret=$?
else 
  python  "$basedir/../clang-format/bin/git-clang-format" "$@"
  ret=$?
fi
exit $ret
